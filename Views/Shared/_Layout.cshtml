<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMVC2</title>
    <link href="~/lib/bootstrap/dist/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVC2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebMVC2</a>

                <span class="navbar-text ms-auto order-sm-2 d-flex justify-content-end">

                    <a href="#" class="nav-link text-dark position-relative">
                        <span class="bi bi-cart4 position-absolute start-0 translate-middle" style="font-size:24px; top:17px">
                            <span id="shopCarSum" class="position-absolute top-0 start-100 badge rounded-pill bg-secondary" style="font-size:10px"></span>
                        </span>
                    </a>

                    <a class="nav-link text-dark" asp-controller="Login" asp-action="Register">Register</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-controller="Login" asp-action="LogOut">LogOut</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login</a>
                    }
                </span>

                <button class="navbar-toggler order-sm-3" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataList" asp-action="Index">商品列表</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataList" asp-action="Index2">沒權限</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebMVC2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <partial name="~/Views/Shared/_AlertPartial.cshtml" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            var errorMessage = '@TempData["ErrorMessage"]';
            // 獲取錯誤訊息
            if (errorMessage) {                
                $('#MessageContext').html(errorMessage);
                $('#exampleModal').modal('show');
            }
        });

        function OpenLoading() {
            $('#loadingModal').modal('show');
        }

        function CloseLoading() {
            $('#loadingModal').modal('hide');
        }

    </script>
    
</body>
</html>
